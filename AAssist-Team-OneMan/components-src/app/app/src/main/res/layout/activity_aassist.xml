<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scroll_view"
        android:orientation="vertical"
        android:fillViewport="true"
        android:background="@color/colorPrimary"
        >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:paddingTop="30dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".AAssist">
        <LinearLayout
            android:id="@+id/chat_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>
        <LinearLayout
            android:id="@+id/justablock"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#fff"
            android:focusable="true"
            android:focusableInTouchMode="true">
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/settingsedit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/settings"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_margin="20dp"/>

    </RelativeLayout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/inputarea"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="#D9FFFFFF"
            >
            <RelativeLayout
                android:id="@+id/voiceinputmode"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/userInput"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:textColorHint="@color/colorAccent"
                    android:hint="Listening"
                    android:visibility="gone"
                    />
                <ImageView
                    android:id="@+id/voiceInput"
                    android:layout_width="55dp"
                    android:layout_height="160dp"
                    android:layout_marginLeft="85dp"
                    android:adjustViewBounds="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/click_speak"

                    />
                <RelativeLayout
                    android:id="@+id/animated_speach"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true">
                <View
                    android:id="@+id/loader_ball1"
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:background="@drawable/loader"
                    android:layout_centerVertical="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="10dp"
                    ></View>
                <View
                    android:id="@+id/loader_ball2"
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:background="@drawable/loader"
                    android:layout_centerVertical="true"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@id/loader_ball1"
                    android:layout_marginRight="10dp"
                    ></View>
                <View
                    android:id="@+id/loader_ball3"
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:background="@drawable/loader"
                    android:layout_centerVertical="true"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@id/loader_ball2"
                    android:layout_marginRight="10dp"
                    ></View>
                <View
                    android:id="@+id/loader_ball4"
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:background="@drawable/loader"
                    android:layout_centerVertical="true"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@id/loader_ball3"
                    android:layout_marginRight="10dp"
                    ></View>
                </RelativeLayout>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/textinputmode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">
                <View
                    android:id="@+id/view1"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="@color/lightgray" />
                <TextView
                    android:id="@+id/inputdetails"
                    android:layout_width="match_parent"
                    android:text="Please enter the Username"
                    android:textColor="#4885ed"
                    android:textSize="17dp"
                    android:textAlignment="center"
                    android:visibility="gone"
                    android:layout_height="wrap_content" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edittextu"
                    android:layout_width="280dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textColor="#101010"
                    android:hint="Enter Text here...."
                    android:textColorHint="@color/lightgray"
                    android:background="#00000000"
                    android:layout_alignParentBottom="true"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/edittextsend"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/send"
                    android:layout_toRightOf="@id/edittextu"
                    android:layout_centerVertical="true"
                    android:layout_alignParentBottom="true"
                     />

            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
